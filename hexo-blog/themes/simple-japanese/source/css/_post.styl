.post
  padding: 2rem;
  margin-bottom: 2rem;

  .title
    margin-top:8px;

.post-thumbnail
  text-align: center;
  margin-bottom: 1.5rem;
  margin: 0 auto 1.5rem;

.content
  &:not(:last-child)
    margin-bottom: 4rem;

  h2
    margin-bottom: 1em;
    text-align: center;
    line-height: 1.618;
    border-top: 1px solid alpha(color-text, 0.75);
    border-bottom: 1px solid alpha(color-text, 0.75);

  h3
    margin-bottom: 1em;
    margin-top: 6px;
    &:not(:first-child)
      margin-top: 2em;

  p
    line-height: 200%;

  strong
    background: linear-gradient(rgba(0, 0, 0, 0) 61%, #e9f1f8 60%, #e9f1f8 0%);

  img
    max-width: 100%;

  code
    color: #2f3b4c;
    border-radius: .25rem;

  a[rel=external]::after
    content: "\f08e";
    font-family: "FontAwesome";
    margin-left: 0.25em;
    margin-right: 0.25em;
    font-size: 0.75rem;
    text-decoration: none !important;

.highlight
  figcaption
    text-align:start;

  figcaption span
    background-color: #a036fa;
    background-image: linear-gradient(-225deg,#ac32e4,#7918f2 48%,#4801ff);
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    color: #fff;
    font-family: Dank Mono,Andale Mono,Consolas,monospace;
    font-size: .8rem;
    font-style: normal;
    left: 2rem;
    padding: .25em 1em;
    position: relative;
    top: 0;
